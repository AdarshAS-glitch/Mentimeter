generator client {
  provider = "prisma-client-js"
  
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
model Admin{
id String @id @default(uuid())
name String 
email String @unique
password String
quiz Quiz[]
}
model User {
  id String @id @default(uuid())
  name String 
  email String @unique
  password String
  responses Responses[]
  result Result[]
}

model Quiz{
  id String @id @default(uuid())
  title String
  adminid String
  admin Admin @relation(fields: [adminid],references: [id])
  questions Questions[]
  result Result[]

}
model Questions{
  id String @id @default(uuid())
  title String
  options Options[]
  answer String
  quizid String
  quiz Quiz @relation(fields: [quizid],references: [id])
  responses Responses[]
}
model Options{
  id String @id @default(uuid())
  option1 String
  option2 String
  option3 String
  option4 String
  questionid String
  questions Questions @relation(fields: [questionid],references: [id])

}

model Responses{
  id Int @id @default(autoincrement())
  questionid String
  question Questions @relation(fields: [questionid],references: [id])
  userid String
  user User @relation(fields: [userid],references: [id])
  response String
}
model Result{
  id String @id @default(uuid())
  quizid String
  userid String
  result Int
  quiz Quiz @relation(fields: [quizid],references: [id])
  user User @relation(fields: [userid],references: [id])
  totalquestions Int
}
